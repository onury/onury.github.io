{
    "name": "Docma Default Template",
    "author": "Onur Yıldırım (onur@cutepilot.com)",
    "version": "1.0.0",
    "license": "MIT",
    // Optional. Main HTML file's name, which is the entry point for the template.
    // If omitted, "index.html" will be used.
    "main": "index.html",
    // Optional. Set this if you need to minify JS files. Keys should be
    // relative paths to template directory; values should be relative paths to
    // output directory.
    "minify": {
        "js/app.js": "js/app.min.js"
    },
    // Optional. Set this if you need to compile less files. Keys should be
    // relative paths to template directory; values should be relative paths to
    // output directory.
    "less": {
        "less/styles.less": "css/styles.css"
    },
    // Optional. Files/directories to be ignored in the output.
    // Paths should be relative to template directory. Globs are allowed.
    "ignore": [
        "js/app.js",
        "less/**",
        "*.md"
    ]
}
